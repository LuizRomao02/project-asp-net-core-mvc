@model IEnumerable<Workshop.Models.Departament>

@{
    ViewData["Title"] = "Departamento";
}

<h2>Departamento</h2>

<p>
    <a asp-action="Create"> Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th> Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id"> <span class="glyphicon glyphicon-eye-open"></span></a>
                <a asp-action="Edit" asp-route-id="@item.Id"> <span class="glyphicon glyphicon-refresh"></span></a>
                <a asp-action="Delete" asp-route-id="@item.Id"> <span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
